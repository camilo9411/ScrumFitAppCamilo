<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ListRoutine_Exercise_Activity">

    <TextView
        android:id="@+id/tvNoExercise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exercise # 1"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="40dp" />

    <TextView
        android:id="@+id/tvTargetMuscle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TargetMuscle"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tvNoExercise"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/edTargetMuscle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pectoralis Major Clavicular Head"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@id/tvTargetMuscle"
        app:layout_constraintLeft_toRightOf="@id/tvTargetMuscle"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="20dp"/>

    <TextView
        android:id="@+id/tvExerciseName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exercise"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tvTargetMuscle"
        app:layout_constraintStart_toStartOf="@id/tvTargetMuscle"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/edExerciseName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bench Press"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@id/tvExerciseName"
        app:layout_constraintStart_toStartOf="@id/edTargetMuscle"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="20dp"/>

    <ImageView
        android:id="@+id/imgExercise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/exercise"
        app:layout_constraintTop_toBottomOf="@id/tvExerciseName"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20dp"
        />

    <TableLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:stretchColumns="*"
        app:layout_constraintTop_toBottomOf="@id/imgExercise"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="20dp"
        >

        <TableRow
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="10sp">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Set 1"
                android:textSize="16sp"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/textView12"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Set 2"
                android:textSize="16sp"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Set 3"
                android:textSize="16sp"
                android:layout_gravity="center"/>
        </TableRow>

        <TableRow
            android:layout_width="0dp"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView8"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Reps"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:gravity="center"/>

            <EditText
                android:id="@+id/edSetOneReps"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:ems="10"
                android:inputType="number"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:gravity="center"
                 />

            <EditText
                android:id="@+id/edSetTwoReps"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:ems="10"
                android:inputType="number"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:gravity="center"
                 />

            <EditText
                android:id="@+id/edSetThreeReps"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:ems="10"
                android:inputType="number"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:gravity="center"
                 />
        </TableRow>

        <TableRow
            android:layout_width="0dp"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView9"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Weight"
                android:ems="10"
                android:inputType="number"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:gravity="center"/>

            <EditText
                android:id="@+id/edSetOneWeight"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:ems="10"
                android:inputType="number"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:gravity="center"
             />

            <EditText
                android:id="@+id/edSetTwoWeight"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:ems="10"
                android:inputType="number"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:gravity="center"/>

            <EditText
                android:id="@+id/edSetThreeWeight"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:ems="10"
                android:inputType="number"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:gravity="center"/>
        </TableRow>

    </TableLayout>

    <Button
        android:id="@+id/btnDone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Done"
        android:textColor="@color/white"
        android:background="@drawable/btn_sign_select"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>